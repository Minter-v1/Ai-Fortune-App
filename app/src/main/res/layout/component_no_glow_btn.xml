<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_purple_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/btn_purple"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnname"
        android:textAppearance="@style/btn_title_text"
        app:layout_constraintStart_toStartOf="@id/iv_purple_btn"
        app:layout_constraintEnd_toEndOf="@id/iv_purple_btn"
        app:layout_constraintTop_toTopOf="@id/iv_purple_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_purple_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>